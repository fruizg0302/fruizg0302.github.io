---
import type { CollectionEntry } from "astro:content";
import IconEdit from "@/assets/icons/IconEdit.svg";
import { SITE } from "@/config";

type Props = {
  hideEditPost?: CollectionEntry<"blog">["data"]["hideEditPost"];
  class?: string;
  post: CollectionEntry<"blog">;
};

const { hideEditPost, post, class: className = "" } = Astro.props;

const editPostConfig = SITE.editPost;
const href =
  "url" in editPostConfig ? `${editPostConfig.url}${post.filePath}` : "";
const showEditPost =
  editPostConfig.enabled && !hideEditPost && href.trim() !== "";
---

{
  showEditPost && (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[
        "flex justify-baseline gap-1.5 opacity-80 hover:text-accent",
        className,
      ]}
    >
      <IconEdit class="inline-block" />
      <span>{"text" in editPostConfig ? editPostConfig.text : "Edit"}</span>
    </a>
  )
}
